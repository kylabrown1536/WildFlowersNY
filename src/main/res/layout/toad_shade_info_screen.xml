<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/pageBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="68dp">

            <TextView
                android:text="Toad Shade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textSize="20sp"
                android:textStyle="normal|bold"
                android:layout_marginTop="25dp"
                android:gravity="right"
                android:layout_marginLeft="80dp" />

            <TextView
                android:text="(Trillium Sessile)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textSize="18sp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="12dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:weightSum="1"
            android:onClick="clickImageToToadImageScreen">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/toad1"
                android:id="@+id/cardinal_flower1"
                android:layout_weight="0.33"
                android:layout_marginTop="20dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/toad2"
                android:id="@+id/cardinal_flower2"
                android:layout_weight="0.37"
                android:layout_marginTop="20dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/toad3"
                android:id="@+id/cardinal_flower3"
                android:layout_marginTop="20dp"
                android:layout_weight="0.22" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="343dp"
            android:layout_weight="0.44"
            android:background="@color/whiteBackground"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="265dp"
                android:layout_weight="0.58">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="273dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Family: Liliaceae"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView10"
                        android:layout_marginTop="14dp"
                        android:layout_marginLeft="12dp" />

                    <TextView
                        android:text="Flowering Season: Mid-to late May"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView9"
                        android:layout_marginTop="14dp"
                        android:layout_marginLeft="12dp" />

                    <TextView
                        android:text='Flowers: Maroon or occasionally green-ish-yellow, solitary, stalkless, about 2" (5cm) tall, with 3 erect, narrowly lance-shaped petals.'
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView8"
                        android:layout_marginTop="14dp"
                        android:layout_marginLeft="12dp" />

                    <TextView
                        android:text='Plant: 4-12" (10-30cm) tall; leaves 3, in a whorl at the base of the flower, simple, ovate with an entire margin, stalkless, dark green often mottled with lighter green.'
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView7"
                        android:layout_marginTop="14dp"
                        android:layout_marginLeft="12dp" />

                    <TextView
                        android:text="Habitat: Moist Woodlands."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView6"
                        android:layout_marginTop="14dp"
                        android:layout_marginLeft="12dp"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="131dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/toad_flower_homeimage"
                    android:id="@+id/imageView12"
                    android:layout_marginTop="50dp" />
            </LinearLayout>

            <TextView
                android:text="Notes: Protected-Endangered - Do not disturb. Only Found in western regions of New York."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_weight="0.12"
                android:layout_marginLeft="12dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>